# Visual Studio Code requires installing an extension in
# order to override its code/workspace settings

root = true

[*] # For any type of files
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{js,jsx,json}] # For any JavaScript or JSON files
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.js] # For any JavaScript files
quote_type = single
